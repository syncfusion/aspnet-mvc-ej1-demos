    function getWidth() {
        var width = $(".gaugecontainer").width();

        var eleWidth = 204;

        var value;
        var div = width % eleWidth;
        if (width > 0) {

            if (width > 825)
                return value = 0;
            else if (width % eleWidth < 204) {
                return value = -(width % (eleWidth * 2)) / 3;
            }
            else if (width % (eleWidth * 2) < 204) {
                return value = (width % (eleWidth * 2)) / 3;
            }
            else if (width % (eleWidth * 3) < 204)
                return value = (width % (eleWidth * 2)) / 4;

            else
                return value = 0;
        }
    }
