@using Syncfusion.JavaScript
@using Syncfusion.MVC.EJ

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="@Url.Content("~/favicon.ico")" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        <meta name="description" content="The Gantt control is a project management tool used for visualizing and tracking the projects and schedules. Using the editing support available in ejGantt, you can edit, manage and organize the projects dynamically."/>
        <link href="@Url.Content("~/Content/ejthemes/ej.widgets.core.min.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/ejthemes/gradient-lime/ej.theme.min.css")" rel="stylesheet" type="text/css" />
        <!--[if lt IE 9]>
		<script src="@Url.Content("~/Scripts/jquery-1.11.3.min.js")"></script>
		<![endif]-->
