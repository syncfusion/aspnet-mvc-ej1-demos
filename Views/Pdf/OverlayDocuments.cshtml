@section SampleHeading{
	<span class="sampleName">Modify Documents / Overlay Documents Sample</span>
	}


@section ControlsSection{

    @{Html.BeginForm("OverlayDocuments", "Pdf", FormMethod.Post);
      { 
    <div class="Common">
        <label>
            @ViewData["Error"]</label>
        <div class="tablediv">
            <div style = "font-size: 17px;font-weight: 400;">
			     	This sample demonstrates how to overlay two different PDF documents into a single PDF document. 

	</div>
	<br/>
        
        <div class="rowdiv">
            <div class="celldiv">
             <div style="border: solid 1px #EDEDED; padding: 5px 7px 5px 7px;">
             <table width="100%">
                        <tr>
                            <td align="left" width="100%">
                                 <input id="InsideBrowser" type="checkbox" name="InsideBrowser" value="Browser" />
                                <label for="Opentype">
                                    Open Document inside Browser</label>
                            </td>
                            <td align="right">
                                  <input type="submit" class="Button" value="Create PDF" />
                            </td>
                        </tr>
                    </table>
               </div>
                
                
            </div>
        </div>
        </div>
		<br/>
			<div style = "font-size: 17px;font-weight: 400;">
		
				
	 This feature can be used to draw template pages from one document into another for easy designing. 
           </div>
    </div>
    Html.EndForm();
      }}}


