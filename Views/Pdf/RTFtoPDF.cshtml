@section SampleHeading{
	<span class="sampleName">Import and Export / RTF to PDF Sample</span>
	}

 @section ControlsSection{


    @{Html.BeginForm("RTFtoPDF", "Pdf", FormMethod.Post);
      { 
    <div class="Common">
        <div class="tablediv">
            <div style = "font-size: 17px;font-weight: 400;">
			        This sample demonstrates how to convert RTF document to PDF. 

	</div>
	<br/>
        
        <div class="rowdiv">
            <div class="celldiv">
             <div style="border: solid 1px #EDEDED; padding: 5px 7px 5px 7px;">
             <table width="100%">
                        <tr>
                            <td align="left" width="100%">
                                 <input id="InsideBrowser" type="checkbox" name="InsideBrowser" value="Browser" />
                                <label for="Opentype">
                                    Open Document inside Browser</label>
                            </td>
                            <td align="right">
                                  <input type="submit" class="Button" value="Create PDF" />
                            </td>
                        </tr>
                    </table>
               </div>
                
                
            </div>
        </div>
        </div>
		<br/>
			<div style = "font-size: 17px;font-weight: 400;">
		
				
		More information about the RTF to PDF document conversion can be found in this documentation <a href="https://help.syncfusion.com/file-formats/pdf/working-with-document-conversions#converting-rtf-documents-to-pdf">section.</a>


           </div>
    </div>
    Html.EndForm();
      }}}


