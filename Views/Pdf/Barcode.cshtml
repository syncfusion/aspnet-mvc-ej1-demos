

@section SampleHeading{
	<span class="sampleName">PDF-Barcode-ASP.NET MVC-SYNCFUSION</span>}
	


@section ControlsSection
{
    @{Html.BeginForm("Barcode", "Pdf", FormMethod.Post);
      { 
    <div class="Common">
       <div style = "font-size: 17px;font-weight: 400;">
	   
	    This sample demonstrates the creation of barcode in the PDF document and does not requires barcode font for creating barcode.It supports both 1D and 2D barcode with many customizing properties. 
			    
	</div>
	<br/>
        <div class="tablediv">
        <div class="rowdiv">
            <div class="celldiv">
             <div style="border: solid 1px #EDEDED; padding: 5px 7px 5px 7px;">
             <table width="100%">
                        <tr>
                            <td align="left" width="100%">
                                 <input id="Checkbox1" type="checkbox" name="InsideBrowser" value="Browser" />
                <label for="Opentype">Open Document inside Browser</label>
                            </td>
                            <td align="right">
                                  <input type="submit" class="Button" value="Create PDF" />
                            </td>
                        </tr>
                    </table>
               </div>
                
                
            </div>
        </div>
        </div>
		<br/>
			<div style = "font-size: 17px;font-weight: 400;">
		
		This feature can be used in invoice, super markets, health care systems and more.
More information about the barcode can be found in this documentation <a href="https://help.syncfusion.com/file-formats/pdf/working-with-barcode">section.</a>
           </div>
    </div>
    Html.EndForm();
      }}
      }
@section MetaTags{
   <meta name="description" content="Example [C#] to create 1D and 2D barcode in the PDF document in ASP.NET MVC using Syncfusion .NET PDF library.">
}

