

@section SampleHeading{
	<span class="sampleName">PDF-Interactive Features-ASP.NET MVC-SYNCFUSION</span>}
	


    @section ControlsSection{
    @{Html.BeginForm("InteractiveFeatures", "Pdf", FormMethod.Post);
      { 
    <div class="Common">
        <div class="tablediv">
            <div style = "font-size: 17px;font-weight: 400;">
			       This sample demonstrates the creation of interactive invoice with  <a href="https://help.syncfusion.com/file-formats/pdf/working-with-attachments">attachment</a>, product total price calculation based on the quantity using <a href="https://help.syncfusion.com/file-formats/pdf/working-with-action#javascript-action">PDF JavaScript</a>

	</div>
	<br/>
        
        <div class="rowdiv">
            <div class="celldiv">
             <div style="border: solid 1px #EDEDED; padding: 5px 7px 5px 7px;">
             <table width="100%">
                        <tr>
                            <td align="left" width="100%">
                                 <input id="Checkbox1" type="checkbox" name="InsideBrowser" value="Browser" />
                <label for="Opentype">
                    Open Document inside Browser</label>
                            </td>
                            <td align="right">
                                   <input type="submit" class="Button" value="Create PDF" />
                            </td>
                        </tr>
                    </table>
               </div>
                
               
            </div>
        </div>
        </div>
		<br/>
			<div style = "font-size: 17px;font-weight: 400;">
		
				
		This example can be used in the real-time invoice generation with print, submit online, or mail the order functionalities.


           </div>
    </div>
    Html.EndForm();
      }}}
@section MetaTags{
   <meta name="description" content="Example [C#] to create PDF invoice with interactive features in ASP.NET MVC using Syncfusion .NET PDF library.">
}


