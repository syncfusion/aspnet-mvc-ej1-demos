@section SampleHeading{
	<span class="sampleName">PDF-XFA Form Creation-ASP.NET MVC-SYNCFUSION</span>}
	
@section ControlsSection{


@{Html.BeginForm("XFAFormCreation", "Pdf", FormMethod.Post);
  { 
    <div>
        <div style = "font-size: 17px;font-weight: 400;">
			      This sample demonstrates how to create registration form using XFA form fields. The Essential PDF supports to create dynamic and static XFA form fields.


	</div>
	<br/>
        <div class="LineSpace">
        </div>
        <div class="tablediv">       
            <div class="rowdiv">
                <div class="celldiv">
                    <div style="border: solid 1px #EDEDED; padding: 5px 7px 5px 7px;">
                        <table width="100%">
                            <tr>
                                <td align="left" width="100%">
                                    <input type="checkbox" name="InsideBrowser" value="Browser" id="InsideBrowser" /><label>Open
                                        Document inside Browser</label>
                                </td>
                                <td align="right">
                                    <input id="createpdf" type="submit" name="submit" value="Create PDF" />
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
		<br/>
			<div style = "font-size: 17px;font-weight: 400;">
		
	More information about the XFA can be found in this documentation <a href="https://help.syncfusion.com/file-formats/pdf/working-with-xfa">section.</a>
           </div>
    </div>
      Html.EndForm();
  }}}
@section MetaTags{
   <meta name="description" content="Example [C#] to create registration form using XFA form fields in ASP.NET MVC using Syncfusion .NET PDF library.">
}

