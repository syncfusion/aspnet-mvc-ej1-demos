

@section SampleHeading{
	<span class="sampleName">PDF-Invoice-ASP.NET MVC-SYNCFUSION</span>}
	

@section ControlsSection{
    @{Html.BeginForm("InvoiceSample", "Pdf", FormMethod.Post);
      { 
    <div class="Common">
        <div style = "font-size: 17px;font-weight: 400;">
			        This sample demonstrates the creation of invoice from the scratch using several elements such as <a href="https://help.syncfusion.com/file-formats/pdf/working-with-images">images</a>,  <a href="https://help.syncfusion.com/file-formats/pdf/working-with-text">text</a>,  <a href="https://help.syncfusion.com/file-formats/pdf/working-with-shapes">shapes</a> and  <a href="https://help.syncfusion.com/file-formats/pdf/working-with-tables">tables</a>
	</div>
	<br/>
        <div class="tablediv">
         @Html.DropDownList("id")
            <div class="rowdiv">
                <div class="celldiv">
                 <div style="border: solid 1px #EDEDED; padding: 5px 7px 5px 7px;">

                
             <table width="100%">
                        <tr>
                            <td align="left" width="100%">
                                 
                                  <input id="InsideBrowser" type="checkbox" name="Browser" value="Browser" />
                    <label for="Opentype">
                        Open Document inside Browser</label>  
                            </td>
                            <td align="right">
                              <input type="submit" value="Create PDF" id="button" />    
                            </td>
                        </tr>
                    </table>
                    
               </div>                  
                 
                    
                </div>
            </div>
        </div>
		<br/>
			<div style = "font-size: 17px;font-weight: 400;">
		
				
		Likewise, we can create pay slips, bills, bank statements and more using our Essential PDF library.
           </div>
    </div>
    Html.EndForm();
      }} }
@section MetaTags{
   <meta name="description" content="Example [C#] to create rich layout invoice in PDF document in ASP.NET MVC using Syncfusion .NET PDF library.">
}


