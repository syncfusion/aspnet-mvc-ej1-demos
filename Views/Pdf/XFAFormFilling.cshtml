@section SampleHeading{
	<span class="sampleName">PDF-XFA Form Filling-ASP.NET MVC-SYNCFUSION</span>}
	
@section ControlsSection{


@{Html.BeginForm("XFAFormFilling", "Pdf", FormMethod.Post);
  { 
    <div>
        <div style = "font-size: 17px;font-weight: 400;">
			       This sample demonstrates how to fill and flatten XFA form fields. It is possible to edit and remove the existing XFA form fields.



	</div>
	<br/>
        <div class="LineSpace">
        </div>
        <input type="checkbox" name="Flatten" value="Flatten" id="Flatten" /><label style="padding-left:4px">
            Flatten XFA Form
        </label>
        <div class="tablediv">           
            <div class="rowdiv">
                <div class="celldiv">
                    <div style="border: solid 1px #EDEDED; padding: 5px 7px 5px 7px;">
                        <table width="100%">
                            <tr>
                                <td align="left" width="100%">
                                    <input id="viewtemplate" type="submit" name="submit1" value="View Template" />
                                </td>
                                <td align="right">
                                    <input id="createpdf" type="submit" name="submit" value="Create PDF" />
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
                <input type="checkbox" name="InsideBrowser" value="Browser" id="InsideBrowser" /><label style="padding-left:4px">
                    Open
                    Document inside Browser
                </label>
            </div>
        </div>
		<br/>
			<div style = "font-size: 17px;font-weight: 400;">
		
				
		This feature can be used in filling forms from the database or from user and read out form fields for transferring user data to database.
More information about the XFA can be found in this documentation <a href="https://help.syncfusion.com/file-formats/pdf/working-with-xfa">section.</a>
           </div>
    </div>
      Html.EndForm();
  }}}
@section MetaTags{
   <meta name="description" content="Example [C#] to fill and flatten XFA form fields in ASP.NET MVC using Syncfusion .NET PDF library.">
}

