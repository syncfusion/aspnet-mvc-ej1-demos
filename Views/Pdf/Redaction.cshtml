

@section SampleHeading{
    <span class="sampleName">Security / Redaction Sample</span>
}

@section ControlsSection{
    @{ using (Html.BeginForm("Redaction", "Pdf", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="Common">
                <div style="font-size: 17px;font-weight: 400;">
                    This sample demonstrates redacting a text from the PDF document. It is also possible to redact the images. The redaction is a process of removing sensitive or unwanted information from the PDF document.
                </div>
                <br />
                <div id="errorlabel" value="error">
                    <p style="color: #FF0000;">
                        @Html.Label("", (string)ViewBag.lab)
                </div>
                <div class="tablediv">
                    <div class="rowdiv">
                        <div class="celldiv">
                            <div style="border: solid 1px #EDEDED; padding: 5px 5px 5px 5px;">
                                <table>
                                    <tr style="width:50%">
                                        <td>
                                            <label>Source</label>
                                        </td>
                                        <td>
                                            <input type="file" id="file" name="file" value="PDF document to redact" style="margin-left: 12px; width:100%" accept="application/pdf" />
                                        </td>
                                    </tr>
                                </table>
                                <table>
                                    <tr style="width:50%">
                                        <td>
                                            <br />
                                            <label>Redaction Bounds</label>
                                        </td>
                                    </tr>
                                </table>
                                <table>
                                    <tr>
                                        <td style="width:10%">
                                            <br />
                                            <label for="x">X</label>
                                        </td>
                                        <td style="width:20%">
                                            <input type="text" name="x" id="x" style="margin-left: 12px; width:100px" value="" />
                                        </td>
                                        <td style="width:20%">
                                            <span id="label1"></span>
                                        </td>
                                        <td style="width:10%">
                                            <br />
                                            <label for="y">Y</label>
                                        </td>
                                        <td style="width:20%">
                                            <input type="text" name="y" id="y" style="margin-left: 12px; width:100px" value="" />
                                        </td>
                                        <td style="width:20%">
                                            <span id="label2"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="width:10%">
                                            <br />
                                            <label for="width">Width</label>
                                        </td>
                                        <td style="width:20%">
                                            <input type="text" name="width" id="width" style="margin-left: 12px; width:100px" value="" />
                                        </td>
                                        <td style="width:20%">
                                            <span id="label3"></span>
                                        </td>
                                        <td style="width:10%">
                                            <br />
                                            <label for="height">Height</label>
                                        </td>
                                        <td style="width:20%">
                                            <input type="text" name="height" id="height" style="margin-left: 12px; width:100px" value="" />
                                        </td>
                                        <td style="width:20%">
                                            <span id="label4"></span>
                                        </td>
                                    </tr>
                                </table>
                                <br />
                                <table>
                                    <tr>
                                        <td align="left" width="100%">

                                            <input id="Checkbox1" type="checkbox" name="Browser" value="Browser" />
                                            <label for="Opentype">Open Document inside Browser</label>
                                        </td>
                                        <td align="right">
                                            <label><input id="submit" type="submit" value="Redact PDF" /></label>
                                        </td>
                                    </tr>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            Html.EndForm();
        }}}
@section ScriptSection{
    <script type="text/javascript" class="jsScript">
        $(function () {
            $('#x').keyup(function () {
                if ($(this).val() == "") {
                    $('#label1').text(" *");
                }
                else if (!$.isNumeric($(this).val())) {
                    $('#label1').text(" Invalid Entry");
                }
                else {
                    $('#label1').text("");
                }
            });
            $('#y').keyup(function () {
                if ($(this).val() == "") {
                    $('#label2').text(" *");
                }
                else if (!$.isNumeric($(this).val())) {
                    $('#label2').text(" Invalid Entry");
                }
                else {
                    $('#label2').text("");
                }
            });
            $('#width').keyup(function () {
                if ($(this).val() == "") {
                    $('#label3').text(" *");
                }
                else if (!$.isNumeric($(this).val())) {
                    $('#label3').text(" Invalid Entry");
                }
                else {
                    $('#label3').text("");
                }
            });
            $('#height').keyup(function () {
                if ($(this).val() == "") {
                    $('#label4').text(" *");
                }
                else if (!$.isNumeric($(this).val())) {
                    $('#label4').text(" Invalid Entry");
                }
                else {
                    $('#label4').text("");
                }
            });
        });
    </script>
    }
