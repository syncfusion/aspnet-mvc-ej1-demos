@section SampleHeading{ <span class="sampleName">Dialog / ModalDialog</span>}

@section ControlsSection{

    @Html.EJ().Button("btnOpen").Text("Click to open dialog").ClientSideEvents(evt => evt.Click("onclick"))
    <div class="control">
        @{Html.EJ().Dialog("lognForm").Title("Login Form").IsResponsive(true).Containment(".control").ContentTemplate(@<div>
            <form id="form1">
                <table>
                    <tr>
                        <td>
                            <p class="top">Please enter your username and password<p>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Username <p class="reqired">*</p>
                            <input type="text" id="txtName" name="txtName" class="ejinputtext" required /><br />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Password <p class="reqired">*</p>
                            <input type="password" id="txtPassword" name="txtPassword" class="ejinputtext" required />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.EJ().CheckBox("txtRember").Text("Remember me").CssClass("top")
                        </td>
                    </tr>
                    <tr>
                        <td align="center">
                            <br />
                            @Html.EJ().Button("downloadBtn").Type(ButtonType.Button).Size(ButtonSize.Medium).Height("30").Width("100").Text("LOGIN").ClientSideEvents(s => s.Click("formsubmit"))
                            <label class="error" for="btn"></label>
                        </td>
                    </tr>
                    <tr>
                        <td align="center" class="acc">
                            Don't have an account ? <a href="#">Signup</a>
                        </td>
                    </tr>
                </table>
            </form>
        </div>).EnableModal(true).EnableResize(false).Width(291).ClientSideEvents(evt => evt.Close("onDialogClose")).IsResponsive(true).Render();}
    </div>
}
@section ScriptSection{
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>

    <script>
        $("#form1").validate({
            rules: {
                txtPassword: "required",
                txtName: "required"
            },
            messages: {
                txtName: { required: "Please enter user name" },
                txtPassword: { required: "Please enter password" }
            }
        })
        $("#btnOpen").hide();
        function onclick() {
            $("#lognForm").ejDialog("open");
            $("#btnOpen").hide();
        }
        function formsubmit() {
            $("#form1").valid();
        }
        function coupeClick() {
            $("#r8Coupe").ejDialog("open");
        }
        function spyderClick() {
            $("#r8Spyder").ejDialog("open");
        }
        function onDialogClose(args) {
            $("#btnOpen").show();
        }
    </script>
}
@section StyleSection{
    <style>
        label.error {
            color: red;
        }
           .htmljssamplebrowser.material .control {
            height:700px;
        }
        .control {
            height: 450px;
            position: relative;
        }                

        .ejinputtext {
            height: 25px;
            width: 100%;
            margin-bottom: 10px;
        }

        .row .cols-sample-area {
            padding: 20px;
            margin-bottom: 50px;
            position: relative;
        }

        .acc {
            font-size: 12px;
            padding-top: 8px;
        }

        .top {
            margin-top: 5px;
        }

        .reqired {
            margin: 0 0 3px 0;
            color: red;
            display: inline-block;
        }

        .e-btn.e-button.e-js {
            border: none;
        }
    </style>
}