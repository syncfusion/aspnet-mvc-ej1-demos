@section MetaTags{
   <meta name="description" content="This example demonstrates how to enable the rtl property in a ASP.NET MVC Captcha.">
}

@section SampleHeading{
    <span class="sampleName">Captcha-RTL-ASP.NET MVC-SYNCFUSION</span>}
@section ControlsSection{
    @using (Html.BeginForm("SuccessMessage", "Captcha", FormMethod.Post))
    {
        <div class="frame">
            <div class="control">
                <table>
                    <tr>
                        <td>
                            <div class="captcha">
                                @Html.EJ().Captcha("captcha").EnableAutoValidation(true).ShowAudioButton(true).ShowRefreshButton(true).EnableRTL(true).RequestMapper(Url.Action("Refresh")).MinimumLength(5).CustomErrorMessage("Invalid Captcha Please Try Again").TargetButton("submit")
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div style="padding: 5px; margin-left: 10px;">
                                @Html.EJ().Button("submit").Size(ButtonSize.Large).Text("Submit").Type(ButtonType.Submit)
                            </div>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
}
}


