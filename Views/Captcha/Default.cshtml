@section SampleHeading{
    <span class="sampleName">Captcha / Default Functionalities</span>}
@section ControlsSection{
    @using (Html.BeginForm("SuccessMessage", "Captcha", FormMethod.Post))
    {
        <div class="frame">
            <div class="control">
                <table>
                    <tr>
                        <td>
                            <div class="captcha">
                                @Html.EJ().Captcha("captcha").EnableAutoValidation(true).ShowAudioButton(true).ShowRefreshButton(true).RequestMapper(Url.Action("Refresh")).MinimumLength(5).CustomErrorMessage("Invalid Captcha Please Try Again").TargetButton("submit")
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.EJ().Button("submit").Size(ButtonSize.Large).Text("Submit").Type(ButtonType.Submit)
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    }
}
@section StyleSection{

    <style>
        .frame {
            margin:0 auto;
        }
    </style>
}

