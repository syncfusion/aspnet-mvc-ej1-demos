@section MetaTags{
   <meta name="description" content="This example demonstrates how to initialize a menu in vertical orientation using Syncfusion ASP.NET MVC Menu control."  >
}

@section SampleHeading{
    <span class="sampleName">Menu-Vertical Menu-ASP.NET MVC-SYNCFUSION</span>}
@section ControlsSection{
<div class="controlframe" style="width: 150px;">
