@section ScriptReferenceSection{
    <script src="@Url.Content("~/Scripts/excanvas.min.js")"></script>
    }
@section SampleHeading{
    <span class="sampleName">Responsible Layout</span>
}


@section ControlsSection{
 <div align="center">
    @(Html.EJ().DigitalGauge("digitalGauge").IsResponsive(true).Width(525).ClientSideEvents(lo => lo.Load("loadGaugeTheme")).Height(305).Items(
                items =>
                {
                    items.Position(
                loc =>
                {
                    loc.X(32).Y(32);
                })
                .SegmentSpacing(0)
                .SegmentWidth(2)
                .CharacterOpacity(1)
                .Value("Syncfusion").Add();
                }))
</div>

}
