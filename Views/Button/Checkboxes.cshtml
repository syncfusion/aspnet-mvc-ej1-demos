@section MetaTags{
   <meta name="description" content=" This example demonstrates a simple, mobile-friendly and responsive ASP.NET MVC checkbox control to shows the checked, unchecked, and indeterminate states of checkbox.">
}

@section SampleHeading{
    <span class="sampleName">Button-Check Boxes-ASP.NET MVC-SYNCFUSION</span>}
@section ActionDescription{
    <div class="action-description">
    <p>
        This sample demonstrates rendering CheckBox control allows you to check an option to perform an action. This control allows you to select true, false or an intermediate option. 
        These checkboxes are supported with themes. The HTML check box control is rendered as Essential ASP.NET MVC Checkbox control.
    </p>
    </div>
}
@section ControlsSection{
    <div class="frame">
        <div class="control">
            <div class="chkalign">
                <br />
                Hobbies
                <br />
                <br />
                <table>
                    <tr>
                        <td class="chkrad">
                            @Html.EJ().CheckBox("check1").CssClass("nodetext").Text("Music").Value("Music")
                        </td>
                        <td class="chkrad">
                            @Html.EJ().CheckBox("Checkbox3").CssClass("nodetext").Text("Sports").Value("Sports")
                        </td>
                        <td class="chkrad">
                            @Html.EJ().CheckBox("Checkbox4").CssClass("nodetext").Text("Bike Riding").Value("Bike Riding")
                        </td>
                    </tr>
                </table>
                <br />
                <br />
                Favorite Search Engines<br />
                <br />
                <table>
                    <tr>
                        <td class="chkrad">
                            @Html.EJ().CheckBox("Checkbox1").CssClass("nodetext").Size(Size.Medium).Text("Google").Value("Google")
                        </td>
                        <td class="chkrad">
                            @Html.EJ().CheckBox("Checkbox5").CssClass("nodetext").Size(Size.Medium).Text("Yahoo").Value("Yahoo")
                        </td>
                        <td class="chkrad">
                            @Html.EJ().CheckBox("Checkbox6").CssClass("nodetext").Size(Size.Medium).Text("Bing").Value("Bing")
                        </td>
                    </tr>
                </table>
                <br />
                <br />
                Favorite Social networks<br />
                <br />
                <table>
                    <tr>
                        <td class="chkrad">
                            @Html.EJ().CheckBox("Checkbox2").CssClass("nodetext").Size(Size.Medium).Text("Facebook").Value("Facebook").EnableTriState(true)
                        </td>
                        <td class="chkrad">
                            @Html.EJ().CheckBox("Checkbox7").CssClass("nodetext").Size(Size.Medium).Text("GPlus").Value("GPlus").EnableTriState(true)
                        </td>
                        <td class="chkrad">
                            @Html.EJ().CheckBox("Checkbox8").CssClass("nodetext").Size(Size.Medium).Text("Twitter").Value("Twitter").EnableTriState(true).CheckState(CheckState.Indeterminate)
                        </td>
                    </tr>
                </table>
                <br />
            </div>
        </div>
    </div>
}
@section StyleSection{
    <style>
        .frame {
            width: 50%;
        }
          .chkrad{
            white-space:nowrap;
        }
    </style>
}

