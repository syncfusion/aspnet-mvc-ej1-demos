@section MetaTags{
   <meta name="description" content="This example demonstrates the default functionalities of the RepeatButton and its various property and events like size, text, showroundedcorner, repeatbutton and click in a ASP.NET MVC">
}
@section SampleHeading{
    <span class="sampleName">Button-Repeat Button-ASP.NET MVC-SYNCFUSION</span>}
@section ControlsSection{
    <div class="frame">
        <div class="control">
            <table>
                <tr>
                     <td style="padding-left:40px">Repeat Button <br/> </br>
                        @Html.EJ().Button("buttonnormal").Text("Click").Size(ButtonSize.Large).ShowRoundedCorner(true).RepeatButton(true).ClientSideEvents(e => e.Click("btnClick"))
                    </td>
                </tr>
            </table>
        </div>
    </div>
}
@section EventsDropDown{
}
@section ScriptSection{
    <script type="text/javascript">

        $(function () {

            var btnObj = $("#buttonnormal").data("ejButton");

        });

        function btnClick(e, ui) {
            jQuery.addEventLog("Repeat Button click<span class='eventTitle'> triggered. </span>");
        }

        function onClear() {
            jQuery.clearEventLog();
        }
    </script>
}

