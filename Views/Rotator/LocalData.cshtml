@section SampleHeading{<span class="sampleName">Rotator-Data Binding - Local Data-ASP.NET MVC-SYNCFUSION</span>}
@section MetaTags{
   <meta name="description" content="This example demonstrates how to bind the local data source key value mapping in the Syncfusion ASP.NET MVC Rotator component.">
}
@section ControlsSection{
    <div class="frame">
        @Html.EJ().Rotator("rot").Datasource((IEnumerable<localdata>)ViewBag.datasource).RotatorFields(t => t.Text("text").Url("url")).SlideWidth("100%").SlideHeight("350px").IsResponsive(true)

    </div>
}
@section StyleSection{
    <style type="text/css" class="cssStyles">
        .frame {
            width: 100%;
            box-sizing : border-box;
        }
        #rot > li img {
            width: 100%;
            height: 350px;
        }
    </style>
}

