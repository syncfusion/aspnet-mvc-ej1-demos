@section MetaTags{
   <meta name="description" content="This demo explains how to bind the remote data as a datasource to the Syncfusion ASP.NET MVC ComboBox contol.">
}

@section SampleHeading{
    <span class="sampleName">ComboBox-Databinding - Remote Data-ASP.NET MVC-SYNCFUSION</span>}
@section ControlsSection{
    <div class="frame">
        <div class="control">
            @{
                Html.EJ()
                    .ComboBox("searchCustomer")
                    .Datasource(d => d.URL("//js.syncfusion.com/ejServices/wcf/NorthWind.svc/").Offline(false).CrossDomain(true))
                    .Query("ej.Query().from('Suppliers').select('SupplierID', 'ContactName')")
                    .ComboBoxFields(f => f.Text("ContactName").Value("SupplierID"))
                    .Width("100%")
                    .Placeholder("Search a customer")
                    .Render();
            }
        </div>
    </div>
}

