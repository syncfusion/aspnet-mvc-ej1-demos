
@section SampleHeading{ <span class="sampleName">Diagram-Local Data-ASP.NET MVC-SYNCFUSION</span>}
@section MetaTags{
    <meta name="description" content="This sample demonstrates generating the diagram from the local JSON data by using the diagramâ€™s data manager and built-in layout algorithm.">
}
@section ControlsSection{
    <div id="main">
        @Html.EJ().Diagram("LocalDataBindingOrgChart", ViewData["diagramModel"] as Syncfusion.JavaScript.DataVisualization.Models.DiagramProperties)
    </div>

    <script type="text/javascript"> 
        function nodeTemplate(diagram, node) {
            node.labels[0].text = node.Role;
            node.fillColor = node.Color;
           
        }

    </script>
    <script src="@Url.Content("~/Scripts/DiagramScripts/DiagramCommon.js")"></script>
}

