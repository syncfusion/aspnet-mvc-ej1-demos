@section SampleHeading{ <span class="sampleName">Presentation-SmartArt Creation-ASP.NET MVC-SYNCFUSION</span>}

    @section ControlsSection{
    @{Html.BeginForm("SmartArtCreation", "Presentation", FormMethod.Post);
      { 
    <div class="Common">
       <div class="tablediv">
            <div class="rowdiv">
                <p>Essential Presentation library has support for creating, editing and converting SmartArt diagrams in a PowerPoint presentation.</p>
                <p>This sample demonstrates how to create SmartArt diagram in a PowerPoint presentation and convert it to PDF document.</p>
                    <br />
                    <b>Features:</b>
                    <br />
                 <ul>
                        <li>Create and edit 134 default SmartArt diagram equivalent to Microsoft PowerPoint.</li>
                        <li>Add, modify and remove nodes of the SmartArt diagram.</li>
                        <li>Convert presentation with SmartArt diagram to PDF/Image.</li>
                 </ul>
             </div>	
        </div>
		<br />
        <div class="tablediv">
            <div class="rowdiv">
                <div class="celldiv">
                 <div style="border: solid 0px #EDEDED; padding: 5px 7px 5px 7px;">
                    <table width="100%">
                        <tr>
                            <label><strong>Save As :</strong></label>
                                <input  type="radio" name="File Type" style="margin-left: 7px" value="PPTX" checked>PPTX
                            
                            
                                <input type="radio" name="File Type" style="margin-left: 7px" value="PDF Document">PDF
                            
							<br />
							<br />
                            
                                <label><input id="submit" type="submit" value="Generate Document" /></label>  
                            
                        </tr>
                    </table>
               </div>
                                       
                </div>
            </div>
        </div>
    </div>
          Html.EndForm();
      }}}

