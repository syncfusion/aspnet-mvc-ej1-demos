@using Syncfusion.JavaScript.DataVisualization

@section SampleHeading{ <span class="sampleName">Security / EncryptAndDecrypt</span>}

@section ControlsSection{
    @{Html.BeginForm("EncryptAndDecrypt", "Presentation", FormMethod.Post);
    {
        <div class="Common">
            <div class="tablediv">
                <div class="rowdiv">
                <p>Essential Presentation library has support for encrypting and decrypting the PowerPoint presentation.</p>
                <p>This sample demonstrates how to add encryption and decryption in a PowerPoint presentation.</p>
                    <br />
                    <b>Features:</b>
                    <br />                    
                 <ul>
                        <li>Encrypt a PowerPoint presentation using agile encryption, like Office 2010 and 2013.</li>
                        <li>Decrypt the encrypted PowerPoint presentation using both agile and standard (Office 2007) encryption.</li>                        
						<li>Mark a PowerPoint presentation as 'Final' or 'Read-only'.</li>
                 </ul>
				 <b>Note:</b><br />
				 <ul>
                        <li>The encrypted documents can only be read by Office 2007 SP2 compatibility pack or later Office versions.</li>                        
                 </ul>
             </div>	
                <br />
                <div class="rowdiv">
                    <div class="celldiv">
                        <input type="radio" id="Radio3" name="Group1" value="CreateEncryptDoc" checked="checked" />
                        <label for="Radio3">
                            Encrypt Document
                        </label>
                        <input type="radio" id="Radio4" name="Group1" style="margin-left: 7px" value="CreateDecryptDoc" />
                        <label for="Radio4">
                            Decrypt Document
                        </label>
                    </div>
                </div>
                <br />
                <div class="rowdiv">
                    <div class="celldiv">
                        <input class="buttonStyle" type="submit" value="Generate Document" style="width:200px;" />
                    </div>
                    <br />
                </div>
            </div>
        </div>
        Html.EndForm();
    }}
}
