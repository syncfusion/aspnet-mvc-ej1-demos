@using Syncfusion.JavaScript.DataVisualization

@section SampleHeading{ <span class="sampleName">Presentation-Notes-ASP.NET MVC-SYNCFUSION</span>}

@section ControlsSection{
    @{Html.BeginForm("Notes", "Presentation", FormMethod.Post);
    {
        <div class="Common">
            <div class="tablediv">
                 <div class="rowdiv">
                <p>Essential Presentation library has support for adding notes in a PowerPoint presentation.</p>
                <p>This sample demonstrates how to add and convert the notes pages of a PowerPoint slide.</p>
                    <br />
                    <b>Features:</b>
                    <br />
                 <ul>
                        <li>Add, remove, and modify 'Notes Pages' in a PowerPoint slide.</li>
                        <li>Convert the 'Notes Pages' to PDF document.</li>
                 </ul>
             </div>	
            </div>
            
            <div class="tablediv">
                <div class="rowdiv">
                   <div class="celldiv">
				   
                        <div style="border: solid 0px #EDEDED; padding: 5px 7px 5px 7px;">
                           <label><strong>Save As :</strong></label>
                                    <input  type="radio" name="File Type" style="margin-left: 7px" value="PPTX" checked><strong>PPTX</strong>
                                    <input type="radio" name="File Type" style="margin-left: 7px" value="PDF Document"><strong>PDF</strong>
                                    <br />
                                    <br />
									<label><input id="submit" type="submit" style="width:150px;height:27px" value="Generate Document" /></label>
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
        Html.EndForm();
    }}
}
