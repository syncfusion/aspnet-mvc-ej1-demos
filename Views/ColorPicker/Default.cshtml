@section MetaTags{
   <meta name="description" content="This example demonstrates a simple, mobile-friendly and responsive ASP.NET MVC ColorPicker to select a color">
}

@section SampleHeading{<span class="sampleName">ColorPicker-Default Functionalities-ASP.NET MVC-SYNCFUSION</span>}
@section ControlsSection{
    <div class="frame ">
        <div class="control">
            <div class="ctrllabel">
                Choose a Color 
            @Html.EJ().ColorPicker("colorPicker").Value("#278787")
            </div>
        </div>
    </div>
}
@section StyleSection{

    <style>
        .frame .control {
            margin-left: 40%;
        }
    </style>
}

