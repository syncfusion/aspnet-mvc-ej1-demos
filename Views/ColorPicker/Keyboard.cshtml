@section MetaTags{
   <meta name="description" content="This example demonstrates how the colorpicker supports the keyboard navigation (keyboard shortcuts) in a ASP.NET MVC">
}

@section SampleHeading{<span class="sampleName">ColorPicker-Keyboard Navigation-ASP.NET MVC-SYNCFUSION</span>}
@section ControlsSection{
    <div class="frame">
        <div class="control">
            <div class="element">
                Colorpicker with Navigation
            @Html.EJ().ColorPicker("colorPicker").Value("#278787").ToolIcon("e-icon e-font")
            </div>
        </div>
        <b></b>
    </div>
}
