@using Syncfusion.JavaScript.DataVisualization

@section SampleHeading{ <span class="sampleName">DocIO-Encrypt and Decrypt-ASP.NET MVC-SYNCFUSION</span>}

@section ControlsSection{
@{ViewBag.Title="    Essential DocIO (Word) :Encrypt Decrypt : Syncfusion";}

    @{Html.BeginForm("EncryptandDecrypt", "DocIO", FormMethod.Post);

        {
            <div class="Common">
                <div class="tablediv">
                    <div class="rowdiv">
                        This sample demonstrates how to encrypt and decrypt the Word document using Essential DocIO.
                    </div>
                    &nbsp;
                    <div class="rowdiv" style="border-width: 0.5px;border-style:solid; border-color: lightgray; padding: 1px 5px 7px 5px">
                        Click the button to view the generated Word document. Please note that Microsoft Word Viewer or Microsoft Word is required to view the resultant Word document.
                        <div class="rowdiv" style="margin-top: 10px">
                            <input type="radio" id="Radio3" name="Group1" value="CreateEncryptDoc" checked="checked" />
                            <label for="Radio3" style="font-weight:normal">
                                Encrypt Document
                            </label>
                            <div class="celldiv">
                                <input type="radio" id="Radio4" name="Group1" value="CreateDecryptDoc" />
                                <label for="Radio4" style="font-weight:normal">
                                    Decrypt Document
                                </label>
                            </div>
                        </div>
                        <div class="rowdiv" style="margin-top: 10px">
                            Save As :
                            <input type="radio" id="rdButtonDoc" name="Group2" value="WordDoc" style="margin-left: 7px" />
                            <label for="rdButtonDoc" style="font-size:13px;font-weight:normal;text-align:match-parent" data-toggle="tooltip" title="Saves the resultant document as Word Doc format">DOC</label>
                            &nbsp;
                            <input type="radio" id="rdButtonDocx" name="Group2" value="WordDocx" style="margin-left: 7px" checked="checked" />
                            <label for="rdButtonDocx" style="font-size:13px;font-weight:normal;text-align:match-parent" data-toggle="tooltip" title="Saves the resultant document as Word Docx format">DOCX</label>

                        </div>
                        <div class="rowdiv" style="margin-top: 8px">
                            <input class="buttonStyle" type="submit" value="Generate Document" style="width:150px;height:27px" />
                        </div>
                    </div>
                    <br />
                    <div class="rowdiv">
                        DocIO supports to encrypt a Word document with password that restrict others from accessing or modifying confidential contents. You can also open an encrypted Word document using DocIO with valid password.
                    </div>
                    <div class="rowdiv" style="margin-top: 15px">
                        More information about the encrypt and decrypt options can be found in this
                        <a href="https://help.syncfusion.com/file-formats/docio/working-with-security#encrypting-with-password">documentation</a>
                        section.
                    </div>
                </div>
            </div>
            Html.EndForm();
        }}
}
