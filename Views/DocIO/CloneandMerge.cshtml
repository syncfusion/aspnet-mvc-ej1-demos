@using Syncfusion.JavaScript.DataVisualization

@section SampleHeading{ <span class="sampleName">DocIO-Clone and Merge-ASP.NET MVC-SYNCFUSION</span>}

@section ControlsSection{

@{ViewBag.Title="   Essential DocIO (Word) : Clone, Merge : Syncfusion";}

    @{Html.BeginForm("CloneandMerge", "DocIO", FormMethod.Post);
        {
            <div class="Common">
                <div class="tablediv">
                    <div class="rowdiv">
                        This sample demonstrates how to clone and merge Word documents using Essential DocIO.
                    </div>
                    &nbsp;
                    <div class="rowdiv" style="border-width: 0.5px;border-style:solid; border-color: lightgray; padding: 1px 5px 7px 5px">
                        Click the button to view the generated Word document or PDF. Please note that Microsoft Word Viewer or Microsoft Word is required to view the resultant Word document and PDF viewer is required to view the resultant PDF.
                        <div class="rowdiv" style="margin-top: 8px">
                            <div class="celldiv">
                                <input type="radio" id="Radio1" name="Group2" value="UseCloneAndMerge" checked="checked" onclick="Disable();"/>
                                <label for="Radio1" style="font-weight:normal">
                                    Use Clone And Merge
                                </label>
                                <br />
                                <input type="radio" id="Radio2" name="Group2" value="UseImportcontents" onclick="Enable();" />
                                <label for="Radio2" style="font-weight:normal">
                                    Use Import contents
                                </label>
                            </div>
                            <div class="rowdiv">
                                Import Contents:
                                <select id="ImportOptions" name="ImportOptions">
                                    <option value="0" class="KeepSourceFormatting" hidden="true">KeepSourceFormatting</option>
                                    <option value="1" class="MergeFormatting" hidden="true">MergeFormatting</option>
                                    <option value="2" class="KeepTextOnly" hidden="true">KeepTextOnly</option>
                                    <option value="3" class="UseDestinationStyles" hidden="true">UseDestinationStyles</option>
                                    <option value="4" class="ListContinueNumbering" hidden="true">ListContinueNumbering</option>
                                    <option value="5" class="ListRestartNumbering" hidden="true">ListRestartNumbering</option>
                                </select>
                            </div>
                            <div class="celldiv" style="margin-top: 10px">
                                Save As :
                                <input type="radio" id="rdButtonDoc" name="Group1" value="WordDoc" style="margin-left: 7px" />
                                <label for="rdButtonDoc" style="font-size:13px;font-weight:normal;text-align:match-parent" data-toggle="tooltip" title="Saves the resultant document as Word Doc format">DOC</label>
                                &nbsp;
                                <input type="radio" id="rdButtonDocx" name="Group1" value="WordDocx" style="margin-left: 7px" checked="checked" />
                                <label for="rdButtonDocx" style="font-size:13px;font-weight:normal;text-align:match-parent" data-toggle="tooltip" title="Saves the resultant document as Word Docx format">DOCX</label>
                                &nbsp;
                                <input type="radio" id="rdButtonWordML" name="Group1" value="WordML" style="margin-left: 7px" />
                                <label for="rdButtonWordML" style="font-size:13px;font-weight:normal;text-align:match-parent" data-toggle="tooltip" title="Saves the resultant document as WordML format">WordML</label>
                                &nbsp;
                                <input type="radio" id="rdButtonPdf" name="Group1" value="Pdf" style="margin-left: 7px" />
                                <label for="rdButtonPdf" style="font-size:13px;font-weight:normal;text-align:match-parent" data-toggle="tooltip" title="Saves the resultant document as PDF">
                                    PDF
                                </label>
                            </div>
                        </div>
                        <div class="rowdiv" style="margin-top: 8px">
                            <input class="buttonStyle" type="submit" value="Generate Document" style="width:150px;height:27px" />
                        </div>
                    </div>
                    <br />
                    <div class="rowdiv">
                        DocIO allows you to combine multiple documents into single document.
                        <ul>
                            <li>
                                You can also clone the specific text, paragraph, tables, section etc. from one document to another document.
                            </li>
                            <li>
                                Formatting options are also available for maintaining the formats between the documents.
                            </li>
                            <li>
                                DocIO supports the import options like keep source formatting, merge formatting, text only, use destination styles, continue and restart list numbering.
                            </li>
                        </ul>
                    </div>
                    <div class="rowdiv" style="margin-top: 15px">
                        More information about the clone and merge functionality can be found in this
                        <a href="https://help.syncfusion.com/file-formats/docio/working-with-word-document#cloning-a-word-document">documentation</a>
                        section.
                    </div>
                </div>
            </div>
            Html.EndForm();
        }}
}
@section ScriptSection{

    <script type="text/javascript">
        function Enable() {
            $('.KeepSourceFormatting').show();
            $('.MergeFormatting').show();
            $('.KeepTextOnly').show();
            $('.UseDestinationStyles').show();
            $('.ListContinueNumbering').show();
            $('.ListRestartNumbering').show();
        }
        function Disable() {
            $('.KeepSourceFormatting').hide();
            $('.MergeFormatting').hide();
            $('.KeepTextOnly').hide();
            $('.UseDestinationStyles').hide();
            $('.ListContinueNumbering').hide();
            $('.ListRestartNumbering').hide();
        }
    </script>
}
