                    <div style="height: 40px">
                        <div style="float: left; padding-left: 483px;">@Html.EJ().Button("gobacktodetails").Text("Back").Size(ButtonSize.Small).ShowRoundedCorner(true).ClientSideEvents(e => e.Click("TabNavigations"))</div>
