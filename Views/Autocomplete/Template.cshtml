@section SampleHeading{
    <span class="sampleName">Autocomplete-Template-ASP.NET MVC-SYNCFUSION</span>}
@section MetaTags{
    <meta name="description" content="This example demonstrates the template support in the Syncfusion ASP.NET MVC Autocomplete component for customizing the suggestion list.">
}
@section ControlsSection{
    <div class="frame">
        <div class="control">
            @{
                Html.EJ()
                    .Autocomplete("selectCountry")
                    .Width("100%")
                    .Datasource((IEnumerable<Flags>)ViewBag.datasource)
                    .Template("<div class='flag ${key}'></div><div class='txt'> ${text} </div>")
                    .WatermarkText("Select a country")
                    .Render();
            }
        </div>
    </div>
}
@section StyleSection{
    <link href="@Url.Content("~/Content/Samples/AtcTemplate.css")" rel="stylesheet" />
    <style>
        .flag
        {
            background: url("../images/autocomplete/flags.png") no-repeat;
            float: left;
            height: 15px;
            margin-right: 10px;
            margin-top: 3px;
            width: 25px;
        }
        
        .txt
        {
            display: table-cell;
            height: 20px;
            vertical-align: middle;
        }
    </style>
}

