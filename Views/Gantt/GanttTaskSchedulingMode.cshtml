@section SampleHeading{<span class="sampleName">Gantt/Task Schedule Modes</span>}

@section ControlsSection{
    <div id="gantt" style="width: 100%; height: 450px;">
        @(Html.EJ().Gantt("gantt")
                   .TaskIdMapping("Id")
                   .TaskNameMapping("Name")
                   .StartDateMapping("StartDate")
                   .DurationMapping("Duration")
                   .ProgressMapping("PercentDone")
                   .ScheduleStartDate("02/27/2017")
                   .ScheduleEndDate("03/30/2017")
                   .HighlightWeekends(true)
                   .IncludeWeekend(false)
                   .TaskSchedulingMode(GanttTaskSchedulingMode.Custom)
                   .TaskSchedulingModeMapping("IsManual")
                   .ChildMapping("Children")
                   .AllowGanttChartEditing(true)
                   .PredecessorMapping("Predecessor")
                   .AllowSelection(true)
                   .AllowColumnResize(true)
                   .TreeColumnIndex(0)
                   .SplitterPosition("20%")
                   .IsResponsive(true)
                   .EditSettings(edit =>
                   {
                       edit.AllowEditing(true);
                       edit.AllowAdding(true);
                       edit.AllowDeleting(true);
                       edit.EditMode("cellEditing");

                   })
                   .ClientSideEvents(eve =>
                   {
                       eve.Load("load");
                   })
                   .Datasource(ViewBag.datasource)
        )
    </div>
}
@section ScriptSection{

    <script>
        function load(args) {
            var columns = this.getColumns();
            for (var i = 1; i <= 5; i++)
                columns[i].visible = false;
            columns[0].width = 100;
        }
    </script>
}


