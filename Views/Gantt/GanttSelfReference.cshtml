@section SampleHeading{<span class="sampleName">Gantt/Self Reference</span>}

@section ControlsSection{
    <div id="ganttselfreference" style="width: 100%; height: 450px;">
        @(Html.EJ().Gantt("ganttselfreference")
              .TaskIdMapping("Id")
              .TaskNameMapping("Name")
              .StartDateMapping("StartDate")
              .DurationMapping("Duration")
              .ProgressMapping("PercentDone")
              .ScheduleStartDate("02/23/2017")
              .ScheduleEndDate("03/15/2017")
              .HighlightWeekends(true)
              .IncludeWeekend(true)
              .AllowColumnResize(true)
              .TreeColumnIndex(1)
              .ChildMapping("Children")
              .AllowSelection(true)
              .AllowGanttChartEditing(false)
              .IsResponsive(true)
              .ParentTaskIdMapping("ParentId")
              .ClientSideEvents(cs => cs.Load("load"))
              .Datasource(ViewBag.datasource)
        )
    </div>
}
@section ScriptSection{
    <script type="text/javascript">
        function load(args) {
            var columns = this.getColumns();
            columns[0].width = 60;
        }
    </script>
}
