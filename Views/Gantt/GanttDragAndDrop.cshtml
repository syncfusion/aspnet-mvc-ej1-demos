@section SampleHeading{<span class="sampleName">Gantt/DragandDrop</span>}

@section ControlsSection{
    <div id="ganttsample2" style="width: 100%; height: 450px;">
        @(Html.EJ().Gantt("ganttsample2")
              .TaskIdMapping("Id")
              .TaskNameMapping("Name")
              .StartDateMapping("StartDate")
              .EndDateMapping("EndDate")
              .ProgressMapping("PercentDone")
              .ScheduleStartDate("02/23/2017")
              .ScheduleEndDate("03/15/2017")
              .HighlightWeekends(true)                                                                
              .AllowDragAndDrop(true)                        
              .AllowColumnResize(true)             
              .TreeColumnIndex(1)              
              .ChildMapping("Children")
              .AllowSelection(true)              
              .AllowGanttChartEditing(false)
              .IsResponsive(true)
              .ClientSideEvents(cs => cs.Load("load"))
              .DragTooltip(tooltip =>
              {
                  tooltip.ShowTooltip(true);
              })
              .Datasource(ViewBag.datasource)                                 
        )
    </div>
}
@section ScriptSection{
    <script type="text/javascript">
        function load(args) {
            var columns = this.getColumns();
            columns[0].width = 60;
        }
    </script>
}