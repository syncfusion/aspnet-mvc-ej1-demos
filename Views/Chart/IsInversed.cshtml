@using Syncfusion.JavaScript.DataVisualization

@section SampleHeading{<span class="sampleName">Chart-Inversed Axis-ASP.NET MVC-SYNCFUSION</span>}

@section MetaTags{
    <meta name="description" content="This sample demonstrates how to render inversed axis using Syncfusion ASP.NET MVC Chart Control">
}

@section ControlsSection{
    <div>
  @(Html.EJ().Chart("container")
        .PrimaryXAxis(ax => ax.MajorGridLines(mr => mr.Visible(false)).Title(tl => tl.Text("Years")).IntervalType(ChartIntervalType.Years)
        .Range(ra => ra.Max(new DateTime(2012, 02, 01)).Min(new DateTime(2005, 01, 01)).Interval(1)).ValueType(AxisValueType.Datetime).LabelFormat("MMM-yyyy"))
        .PrimaryYAxis(pr => pr.Title(tl => tl.Text("Exchange rate (INR per USD)")).Range(ra => ra.Max(60).Min(34).Interval(2))
        .RangePadding(ChartRangePadding.Additional).IsInversed(true))
        .Series(sr =>
            {
                sr.Points(pt =>
                    {
                        pt.X("2005/ 01/ 01").Y(43.47).Add();
                        pt.X("2006/ 01/ 01").Y(45.19).Add();
                        pt.X("2007/ 01/ 01").Y(39.42).Add();
                        pt.X("2008/ 10/ 01").Y(48.88).Add();
                        pt.X("2009/ 10/ 01").Y(46.37).Add();
                        pt.X("2010/ 01/ 22").Y(44.17).Add();
                        pt.X("2011/ 01/ 22").Y(57.15).Add();
                        pt.X("2012/ 01/ 22").Y(54.73).Add();
                    }).Name("Person").Type(SeriesType.Line).EnableAnimation(true).Tooltip(tl => tl.Visible(true)).Marker(mr => mr.Visible(true))
                      .Border(br => br.Width(2)).Add();

            })
        .IsResponsive(true)
        .Load("loadTheme")
        .Title(title => title.Text("Exchange rate"))
        .Size(sz => sz.Height("600"))
        .Legend(lg => { lg.Visible(false); })
        )
        <script>
            $("#controlarea").css("visibility", "visible");
        </script>
    </div>
}

