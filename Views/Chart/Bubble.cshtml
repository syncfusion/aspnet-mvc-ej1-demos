@using Syncfusion.JavaScript.DataVisualization

@section SampleHeading{<span class="sampleName">Chart-Bubble-ASP.NET MVC-SYNCFUSION</span>}

@section MetaTags{
    <meta name="description" content="This sample demonstrates how to render and configure bubble series using Syncfusion ASP.NET MVC Chart Control">
}

@section ControlsSection{
    <div>
@(Html.EJ().Chart("container")
      .PrimaryXAxis(pr => pr.Title(tl => tl.Text("Literacy Rate")).Range(ra => ra.Max(100).Min(60).Interval(5)))
      .PrimaryYAxis(pr => pr.Range(ra => ra.Max(16).Min(-2).Interval(2)).Title(tl => tl.Text("GDP Growth Rate")).LabelFormat("{value}"))
      .Series(sr =>
            {
                sr.Points(pt =>
                    {
                        pt.X("92.2").Y(7.8).Size(1.347).Text("China").Fill("#E94649").Add();
                        pt.X("74").Y(6.5).Size(1.241).Text("India").Fill("#F6B53F").Add();
                        pt.X("90.4").Y(6.0).Size(0.238).Text("Indonesia").Fill("#6FAAB0").Add();
                        pt.X("99.4").Y(2.2).Size(0.312).Text("US").Fill("#C4C24A").Add();
                        pt.X("88.6").Y(1.3).Size(0.197).Text("Brazil").Fill("#FB954F").Add();
                        pt.X("54.9").Y(3.7).Size(0.177).Text("Pakistan").Fill("#D9CEB2").Add();
                        pt.X("99").Y(0.7).Size(0.0818).Text("Germany").Fill("#FF8D8D").Add();
                        pt.X("72").Y(2.0).Size(0.0826).Text("Egypt").Fill("#69D2E7").Add();
                        pt.X("99.6").Y(3.4).Size(0.143).Text("Russia").Fill("#E27F2D").Add();
                        pt.X("99").Y(0.2).Size(0.128).Text("Japan").Fill("#6A4B82").Add();
                        pt.X("86.1").Y(4.0).Size(0.115).Text("Mexico").Fill("#F6B53F").Add();
                        pt.X("92.6").Y(6.6).Size(0.096).Text("Philippines").Fill("#C4C24A").Add();
                        pt.X("61.3").Y(14.5).Size(0.162).Text("Nigeria").Fill("#FF8D8D").Add();
                        pt.X("56.8").Y(6.1).Size(0.151).Text("Bangaladesh").Fill("#69D2E7").Add();
                    }).EnableAnimation(true).Type(SeriesType.Bubble).Opacity(0.7)
                    .Tooltip(tt =>
                               tt.Visible(true)
                                 .Format("#point.text#<br/>Literacy Rate : #point.x#%<br/>GDP Annual Growth Rate : #point.y#<br/>Population : #point.size# Billion"))
                                 .Name("pound").Add();
            })
        .Load("loadTheme")
        .IsResponsive(true)
        .Title(t => t.Text("World Countries Details"))
        .Size(sz => sz.Height("600"))
        .Legend(lg => { lg.Visible(false); })
        )
        <script>
            $("#controlarea").css("visibility", "visible");
        </script>
    </div>
}


