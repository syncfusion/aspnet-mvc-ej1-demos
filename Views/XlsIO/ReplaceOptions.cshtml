@using Syncfusion.JavaScript.DataVisualization


@section SampleHeading{<span class="sampleName">XlsIO / ReplaceOptions</span>}

 @section ControlsSection{                                
	      @{ViewBag.Title = "    Essential XlsIO (Excel) : Replace Options : Syncfusion";}

@{Html.BeginForm("ReplaceOptions", "XlsIO", FormMethod.Post);
{
    <div class="Common">
        <div class="tablediv">
            <div class="rowdiv">
                This sample demonstrates some of the replace options in Essential XlsIO. 
                <br />
                <br />
                <b>Features:</b>
                <br />
                <br />
                <ul>
                    <li>Find numbers, text, boolean or dates and replaces them with the given data on specified replace options</li>
                </ul>
            </div>
            <br />
            <div class="rowdiv">
                <label>
                    Click the button to view an Excel spreadsheet generated by Essential XlsIO. Please
                    note that Microsoft Excel Viewer or Microsoft Excel is required to view the resultant document.
                </label>
            </div>
            <br />
            <div class="rowdiv">
                <table id="PanelTable" width="450px">
                    <tr>
                        <td style="font-weight: bold">
                            Find what:
                        </td>
                        <td>
                            <select name="FindList" id="findText">
                                <option>Berlin</option>
                                <option>8000</option>
                                <option>Representative</option>
                                <option>3/6/2013</option>
                            </select>
                        </td>
                        <td>
                            <div>
                                <input type="checkbox" name="CheckBox1" id="check1" />Match case
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Replace with:</strong>
                        </td>
                        <td>
                            <div>
                                <input type="text" name="ReplaceText" id="replaceText" style="width:112px" />
                            </div>
                        </td>
                        <td>
                            <div>
                                <input type="checkbox" name="CheckBox2" id="check2" />Match entire cell contents
                            </div>
                        </td>
                    </tr>         
                </table>
            </div>
	        <br />
            <div class="celldiv">
                <table>
                    <tr>
                        <td>
                            <input id="viewtemplate" class="buttonStyle" type="submit" name="button" value="Input Template" style="width:140px;" />
                        </td>
                        <td style="width:10px;">
                        </td>&nbsp; &nbsp; &nbsp; &nbsp;&nbsp; &nbsp; &nbsp; &nbsp;
                        <td>
                            <input id="generate" class="buttonStyle" type="submit" name="button" value="Replace" style="width:140px;" />
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    Html.EndForm();
    } 
  }               
}
