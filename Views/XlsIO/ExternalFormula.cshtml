@using Syncfusion.JavaScript.DataVisualization


@section SampleHeading{<span class="sampleName">XlsIO / External Formula</span>}

@section ControlsSection{
    @{ViewBag.Title = "    Essential XlsIO (Excel) : External Formula : Syncfusion";}

    @{Html.BeginForm("ExternalFormula", "XlsIO", FormMethod.Post);
        {
            <div class="Common1">
                <div class="tablediv">
                    <div class="rowdiv">
                        External Formulas that refers to a value in another workbook. An external formula is a reference to a cell or range of cells in another workbook.<br />
                        <br />
                        <b>Features:</b>
                        <br />
                        <br />
                        <ul>
                            <li>Reading formula strings using XlsIO</li>
                            <li>Reading evaluated formulas using XlsIO</li>
                        </ul>
                    </div>
                    <br />
                    <div class="rowdiv">
                        <label>
                            Click the button to view an Excel spreadsheet generated by Essential XlsIO. Please
                            Read Formula from the template document.
                        </label>
                    </div>
                    </div>
                <div class="lable">
                    <table style="margin-top: 10px" cellpadding="0" cellspacing="0" border="0">
                        <tr>
                            <td width="110px" align="left" valign="top">
                                <label>
                                    Formula String
                                </label>
                            </td>
                            <td align="left">
                                &nbsp;&nbsp;
                            </td>
                            <td>
                                <label id="formulastring" style="font-weight:normal">
                                    @ViewBag.formulaString
                                </label>
                            </td>
                        </tr>
                        <tr>
                            <td align="right">
                                &nbsp;
                            </td>
                        </tr>
                        <tr>
                            <td width="110px" align="left">
                                <label>
                                    Computed Value
                                </label>
                            </td>
                            <td align="left">
                                &nbsp;&nbsp;
                            </td>
                            <td>
                                <label id="computedvalue" style="font-weight:normal">
                                    @ViewBag.computedValue
                                </label>
                            </td>
                        </tr>
                    </table>
                    <br/>
                        <div class="rowdiv">
                            <div class="celldiv">
                                <input id="readformula" class="buttonStyle" type="submit" name="button" value="Read Formula" style="width:150px;" />
                                <input id="writeformula" class="buttonStyle" type="submit" name="button" value="Write Formula" style="width:150px;" />
                            </div>
                        </div>
                </div>
            </div>
            Html.EndForm();
        }}
}
