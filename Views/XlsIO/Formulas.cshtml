@using Syncfusion.JavaScript.DataVisualization


@section SampleHeading{<span class="sampleName">XlsIO / Formulas</span>}

 @section ControlsSection{                                
	     @{ViewBag.Title = "    Essential XlsIO (Excel) : Formula : Syncfusion";}

@{Html.BeginForm("Formulas", "XlsIO", FormMethod.Post);
{
    <div class="Common1">
        <div class="tablediv">
            <div class="rowdiv">
                Formulas are entries in Excel that have an equation that calculates the value to be displayed. A typical formula might contain cells, constants, and even functions. Essential XlsIO has support for reading and writing formulas.<br />
                <br />
                <b>Features:</b>
                <br />
                <br />
                <ul>
                    <li>Writing array formulas</li>
                    <li>Writing Excel built-in formulas</li>
                    <li>Reading formula strings using XlsIO</li>
                    <li>Reading evaluated formulas using XlsIO</li>
                </ul>
            </div>
            <br />
            <div class="rowdiv">
                <label>
                    Click the button to view an Excel spreadsheet generated by Essential XlsIO. Please
                    Read Formula from the template document.
                </label>
            </div>
            <br />
            <div class="rowdiv">
                <div class="celldiv">
                    <label>
                        Formula String
                    </label>
                    &nbsp;&nbsp;&nbsp;
                    <label id="formulastring">
                        @ViewBag.formulaString
                    </label>

                </div>
                <div class="celldiv">
                </div>
            </div>
            <br />
            <div class="rowdiv">
                <div class="celldiv">
                    <label>
                        Computed Value
                    </label>
                    &nbsp;&nbsp;
                    <label id="computedvalue">
                        @ViewBag.computedValue
                    </label>
                </div>
                <div class="celldiv">

                </div>
            </div>
            <br />
            <div class="rowdiv">
                <div class="celldiv">
                    <input id="readformula" class="buttonStyle" type="submit" name="button" value="Read Formula" style="width:150px;" />
                    <input id="writeformula" class="buttonStyle" type="submit" name="button" value="Write Formula" style="width:150px;" />
                </div>
            </div>
        </div>
    </div>
    Html.EndForm();
  }}
}
