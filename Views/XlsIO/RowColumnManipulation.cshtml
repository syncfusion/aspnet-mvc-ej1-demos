@using Syncfusion.JavaScript.DataVisualization


@section SampleHeading{<span class="sampleName">XlsIO / RowColumnManipulation</span>}

 @section ControlsSection{                                
	      @{ViewBag.Title = "    Essential XlsIO (Excel) : Row, Column Manipulation : Syncfusion";}


@{Html.BeginForm("RowColumnManipulation", "XlsIO", FormMethod.Post);
{
    <div class="Common">
        <div class="tablediv">
            <div class="rowdiv">
                Rows and columns in Excel can be customized, as required, with a number of options. Some of the major manipulations that can be done with rows and columns are setting row height, setting column width, hiding or un-hiding, and grouping or ungrouping.
                <br />
                <br /><b>Features:</b>
                <br />
                <br />
                <ul>
                    <li>Reading template document</li> 
                    <li>Setting row height</li>
                    <li>Setting column width</li>
                    <li>Hiding and un-hiding</li>
                    <li>Grouping and ungrouping</li>
                </ul>
            </div>
            <br />
            <div class="rowdiv">
                <label>
                    Click the button to view an Excel spreadsheet generated by Essential XlsIO. Please
                    note that Microsoft Excel Viewer or Microsoft Excel is required to view the resultant document.
                </label>
            </div>
            <br />
            <div class="rowdiv">
                <div class="celldiv">
                    <label>
                        <strong>  Save As :</strong>
                    </label>
                    <input id="rbtnXls" type="radio" name="SaveOption" value="Xls" />
                    <label for="rbtnXls">
                        XLS
                    </label>
                    &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
                    <input id="rbtnXlsx" type="radio" name="SaveOption" value="Xlsx" checked="checked" />
                    <label for="rbtnXlsx">
                        XLSX
                    </label>
                </div>
                <br />
                <div class="celldiv">
                    <input id="generate" class="buttonStyle" type="submit" value="Create Document" style="width: 200px;" />
                    <input id="viewtemplate" class="buttonStyle" type="submit" name="button" value="Input Template" style="width:200px;"/>
                </div>
            </div>

        </div>
    </div>
    Html.EndForm();
} }               
              }
