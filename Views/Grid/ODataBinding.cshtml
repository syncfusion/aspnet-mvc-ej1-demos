}
@section ScriptSection{
    
    <script type="text/javascript">
        $(document).ajaxSend(function (event, jqxhr, settings) {
            jQuery.addEventLog("<span class='eventTitle' id='url'> " + settings.url.split("?")[1] + " </span>");
        });

        function onClear() {
            $("#EventLog").html("");
        }
    </script>
}