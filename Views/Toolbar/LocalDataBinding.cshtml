@section SampleHeading{
    <span class="sampleName">Toolbar-Local Data-ASP.NET MVC-SYNCFUSION</span>}
@section ControlsSection{
    <div class="frame">
        <div class="control">
            @Html.EJ().Toolbar("toolbarJson").EnableSeparator(true).Datasource((IEnumerable<ToolbarLocalBinding>)ViewBag.datasource).ToolbarFields(f => f.ID("empid").SpriteCssClass("spriteCss").Group("group")).Orientation(Orientation.Horizontal).Width("100%")
        </div>
    </div>
	<style>
	.material .frame{
		width: 357px;
	}
	.material #toolbarJson ul{
		height: 45px;
	}
	</style>
}
@section StyleSection{
    <link href="@Url.Content("~/Content/Samples/ToolLocal.css")" rel="stylesheet" />
}

